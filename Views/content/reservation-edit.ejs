<h1 class="primary-heading">
  <i class="fa-solid fa-hotel"></i> Edit Reservation
</h1>
<div class="row justify-content-lg-center g-3">
  <form class="row g-3">
    <div class="col-md-6">
      <label for="inputReservationFirstName" class="form-label"
        >Guest First Name:
      </label>
      <input
        type="text"
        placeholder="First Name"
        class="form-control"
        id="inputReservationFirstName"
      />
    </div>

    <div class="col-md-6">
      <label for="inputReservationLastName" class="form-label"
        >Guest Last Name:</label
      >
      <input
        type="text"
        placeholder="Last Name"
        class="form-control"
        id="inputReservationLastName"
      />
    </div>
    <div class="col-10">
      <label for="inputAddress" class="form-label">Address</label>
      <input
        type="text"
        class="form-control"
        id="inputAddress"
        placeholder="1234 Main St"
      />
    </div>
    <div class="col-2">
      <label for="inputUnitNumber" class="form-label">Unit Number</label>
      <input
        type="text"
        class="form-control"
        id="inputUnitNumber"
        placeholder="Unit 200"
      />
    </div>
    <div class="col-md-6">
      <label for="inputCity" class="form-label">City</label>
      <input type="text" class="form-control" id="inputCity" />
    </div>
    <div class="col-md-2">
      <label for="inputProvince" class="form-label">Province</label>
      <select id="inputProvince" class="form-select">
        <option selected>Alberta</option>
        <option>British Columbia</option>
        <option>Manitoba</option>
        <option>New Brunswick</option>
        <option>Newfoundland and Labrador</option>
        <option>Northwest Territories</option>
        <option>Nova Scotia</option>
        <option>Nunavut</option>
        <option>Ontario</option>
        <option>Prince Edward Island</option>
        <option>Quebec</option>
        <option>Saskatchewan</option>
        <option>Yukon</option>
      </select>
    </div>
    <div class="col-md-2">
      <label for="inputCountry" class="form-label">Country</label>
      <select id="inputCountry" class="form-select">
        <option selected>Canada</option>
      </select>
    </div>
    <div class="col-md-2">
      <label for="inputPostalCode" class="form-label">Postal Code</label>
      <input type="text" class="form-control" id="inputPostalCode" />
    </div>

    <div class="col-md-3">
      <label for="inputCheckInDate" class="form-label">Check In Date:</label>
      <input type="date" class="form-control" id="inputCheckInDate" />
    </div>
    <div class="col-md-3">
      <label for="inputCheckOutDate" class="form-label">Check Out Date:</label>
      <input type="date" class="form-control" id="inputCheckOutDate" />
    </div>
    <div class="col-md-2">
      <label for="inputPax" class="form-label">Number of Guests</label>
      <select id="inputPax" class="form-select">
        <option>1</option>
        <option selected>2</option>
      </select>
    </div>
    <div class="col-md-4">
      <label for="inputRoomType" class="form-label">Room Type:</label>
      <select id="inputRoomType" class="form-select">
        <option>Twin Room with Beach View</option>
        <option selected>Double Room with Beach View</option>
        <option>Queen Room with Balcony & Beach View</option>
        <option>King Ensuite with Balcony & Beach View</option>
      </select>
    </div>
  </form>
  <div class="col-12">
    <button type="submit" class="btn btn-primary" id="editButton">
      Update Booking
    </button>
    <button type="reset" class="btn btn-warning" id="resetButton">
      Reset Changes
    </button>
  </div>
</div>
