<!-- <div class="hero-text-box"> -->
<div class="login-container">
  <h1 class="primary-heading">
    <i class="fa-solid fa-hotel"></i> Reservations
  </h1>
  <% if (messages.length > 0) { %>
  <div id="messageArea" class="alert alert-danger"><%= messages %></div>
  <% } %>
  <div class="row justify-content-lg-center g-3">
    <form method="POST" class="row g-3">
      <div class="col-12"></div>
      <div class="col-md-6">
        <label for="inputReservationFirstName" class="form-label"
          >Guest First Name
        </label>
        <input
          type="text"
          placeholder="First Name"
          class="form-control"
          id="inputReservationFirstName"
          name="inputReservationFirstName"
        />
      </div>

      <div class="col-md-6">
        <label for="inputReservationLastName" class="form-label"
          >Guest Last Name</label
        >
        <input
          type="text"
          placeholder="Last Name"
          class="form-control"
          id="inputReservationLastName"
          name="inputReservationLastName"
        />
      </div>
      <div class="col-10">
        <label for="inputAddress" class="form-label">Billing Address</label>
        <input
          type="text"
          class="form-control"
          id="inputAddress"
          placeholder="1234 Main St"
          name="inputAddress"
        />
      </div>
      <div class="col-2">
        <label for="inputUnitNumber" class="form-label"
          >Billing Unit Number</label
        >
        <input
          type="text"
          class="form-control"
          id="inputUnitNumber"
          placeholder="Unit 200"
          name="inputUnitNumber"
        />
      </div>
      <div class="col-4">
        <label for="inputEmailAddress" class="form-label">Email Address</label>
        <input
          name="inputEmailAddress"
          value="<%= emailaddress %>"
          type="text"
          class="form-control"
          id="inputEmailAddress"
          placeholder="john.doe@example.com"
        />
      </div>
      <div class="col-md-2">
        <label for="inputCity" class="form-label">Billing City</label>
        <input
          name="inputCity"
          type="text"
          class="form-control"
          id="inputCity"
        />
      </div>
      <div class="col-md-2">
        <label for="inputProvince" class="form-label">Billing Province</label>
        <select name="inputProvince" id="inputProvince" class="form-select">
          <option value="Alberta" selected>Alberta</option>
          <option value="British Columbia">British Columbia</option>
          <option value="Manitoba">Manitoba</option>
          <option value="New Brunswick">New Brunswick</option>
          <option value="Newfoundland and Labrador">
            Newfoundland and Labrador
          </option>
          <option value="Northwest Territories">Northwest Territories</option>
          <option value="Nova Scotia">Nova Scotia</option>
          <option value="Nunavut">Nunavut</option>
          <option value="Ontario">Ontario</option>
          <option value="Prince Edward Island">Prince Edward Island</option>
          <option value="Quebec">Quebec</option>
          <option value="Saskatchewan">Saskatchewan</option>
          <option value="Yukon">Yukon</option>
        </select>
      </div>
      <div class="col-md-2">
        <label for="inputCountry" class="form-label">Country</label>
        <select name="inputCountry" id="inputCountry" class="form-select">
          <option value="Canada" selected>Canada</option>
        </select>
      </div>
      <div class="col-md-2">
        <label for="inputPostalCode" class="form-label"
          >Billing Postal Code</label
        >
        <input
          type="text"
          name="inputPostalCode"
          class="form-control"
          id="inputPostalCode"
        />
      </div>

      <div class="col-md-3">
        <label for="inputCheckInDate" class="form-label">Check In Date:</label>
        <input
          name="inputCheckInDate"
          type="date"
          class="form-control"
          id="inputCheckInDate"
        />
      </div>
      <div class="col-md-3">
        <label for="inputCheckOutDate" class="form-label"
          >Check Out Date:</label
        >
        <input
          type="date"
          name="inputCheckOutDate"
          class="form-control"
          id="inputCheckOutDate"
        />
      </div>
      <div class="col-md-2">
        <label for="inputPax" class="form-label">Number of Guests</label>
        <select name="inputPax" id="inputPax" class="form-select">
          <option>1</option>
          <option selected>2</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="inputRoomType" class="form-label">Room Type:</label>
        <select name="inputRoomType" id="inputRoomType" class="form-select">
          <option value="TWN ROOM">Twin Room with Beach View</option>
          <option value="DBL ROOM" selected>Double Room with Beach View</option>
          <option value="QUEEN ROOM">
            Queen Room with Balcony & Beach View
          </option>
          <option value="KING ROOM">
            King Ensuite with Balcony & Beach View
          </option>
        </select>
      </div>
      <div></div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary" id="addButton">
          Create Booking
        </button>
        <button id="cancelButton" type="reset" class="btn btn-primary">
          <% if(userType === "employee") { %>
          <a
            href="/reservation-list"
            type="button"
            class="btn btn-warning"
            id="cancelButton"
          >
            Cancel
          </a>
          <% } else if (userType === "guest") { %>
          <a
            href="/guest-reservation"
            type="button"
            class="btn btn-warning"
            id="cancelButton"
          >
            Cancel
          </a>
          <% } %>
        </button>
      </div>
    </form>
  </div>
</div>
