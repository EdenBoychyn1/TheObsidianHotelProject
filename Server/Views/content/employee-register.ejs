<div class="login-container">
  <div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
      <div class="login" id="contentArea">
        <h1 class="display-4">Employee Registration</h1>
        <% if (messages.length > 0) { %>
        <div id="messageArea" class="alert alert-danger"><%= messages %></div>
        <% } %>
        <form method="POST" id="registerForm" novalidate method="POST">
          <p id="pclass" class="hint-text">
            Create your own account. It's free and only takes a minute.
          </p>

          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <input
                  class="form-control"
                  type="text"
                  name="firstName"
                  id="firstName"
                  placeholder="First Name"
                  required
                />
              </div>
              <div class="col-md-6">
                <input
                  class="form-control"
                  type="text"
                  name="lastName"
                  id="lastName"
                  placeholder="Last Name"
                  required
                />
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                <input
                  type="email"
                  class="form-control"
                  id="emailAddress"
                  name="emailAddress"
                  required
                  value=""
                  placeholder="Email"
                />
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  required
                  value=""
                  placeholder="Password"
                />
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-12">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  name="confirmPassword"
                  required
                  value=""
                  placeholder="Confirm Password"
                />
              </div>
            </div>
          </div>
          <div class="mb-3 form-check">
            <input
              id="termsAndConditionsCheckbox"
              name="termsAndConditionsCheckbox"
              type="checkbox"
              class="form-check-input"
            />
            <label class="form-check-label" for="termsAndConditionsCheckbox"
              >By selecting this you are agreeing to our Employee Registration
              Terms and Conditions.</label
            >
          </div>

          <div class="text-end">
            <button
              type="submit"
              id="submitButton"
              class="btn btn-primary btn-lg"
            >
              Register
            </button>
            <button
              id="cancelButton"
              type="cancel"
              class="btn btn-primary btn-lg"
            >
              <i class="fas fa-sign-in-alt"></i>
              Cancel
            </button>
          </div>
        </form>
      </div>
      <p class="text-center text-muted small">
        Already have an account?
        <a href="/login">Sign in</a>
      </p>
    </div>
  </div>
</div>
